{
    "entryFile": "./index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*Controller.ts"],
    "spec": {
        "basePath": "/api",
        "outputDirectory": "public",
        "specVersion": 3,
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "routes": {
        "basePath": "/api",
        "routesDir": "src",
        "authenticationModule": "./src/middlewares/authenticated.ts"
      }
}